{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build and run C++",
      "type": "shell",
      // Command to compile and then run the file
      "command": "g++ -std=c++17 -Wall \"${file}\" -o \"${fileDirname}\\${fileBasenameNoExtension}.exe\" && \"${fileDirname}\\${fileBasenameNoExtension}.exe\" < input.txt > output.txt",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}